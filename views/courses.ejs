  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
      <div class="container">
        <a href="" class="navbar-brand">E7</a>
    </nav>

  <!-- POSTS -->
  <section id="posts">
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4> Courses </h4>
            </div>

            <table class="table table-striped">
              <thead class="thead-white">
                <tr>
                  <th>id</th>
                  <th>Name</th>
                  <th>Code</th>
                  <th>Descripation</th>
                  <th>Update</th>
                  <th>Delete</th>
                 
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < courses.length ; i++) {%>
                <tr>
                  <td><%= courses[i].id %></td>
                  <td><%= courses[i].name %></td>
                  <td><%= courses[i].code %></td>
                  <td><%= courses[i].description %></td>
                  <td>
                    <a href = "/api/courses/update/<%= courses[i].id %>" class="btn btn-primary">
                      <i class="fas fa-angle-double-right"></i> update
                    </a>
                  </td>
                  <td>
                    <a  href = "/api/courses/delete/<%= courses[i].id %>" class="btn btn-danger">
                      <i class="fas fa-angle-double-right"></i> Delete
                    </a>
                  </td>
                </tr>

                <% } %>
              </tbody>
            </table>
          </div>
        </div>


  
        </div>
      </div>
    </div>
  </section>


  <footer id="main-footer" class="text-center fixed-bottom  p-3 bg-primary">
    <div class="container">
      <div class="row">
        <div class="col text-white">
          <p >Copyright 2021
        </div>
      </div>
    </div>
  </footer>
 
</body>

